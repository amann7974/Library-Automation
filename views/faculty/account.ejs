<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Account - SLIET Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");

      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div class="flex h-screen overflow-x-hidden">
      <!-- Sidebar -->
      <aside
        class="fixed md:static top-0 left-0 h-full -translate-x-full md:translate-x-0 bg-gradient-to-b from-purple-900 to-indigo-900 w-64 flex-shrink-0 transition-transform duration-300 ease-in-out z-40"
        id="sidebar"
      >
        <div class="p-4 border-b border-white/10">
          <div class="flex items-center gap-3">
            <img
              src="/images/logo.png"
              alt="SLIET logo"
              class="w-10 h-10 rounded-full ring-2 ring-white/50"
            />
            <h1 class="text-white font-semibold">SLIET LIBRARY</h1>
          </div>
        </div>

        <nav class="p-4 space-y-2">
          <a
            href="/pages/faculty/dashboard"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class="fas fa-home"></i>
            <span>Home</span>
          </a>
          <a
            href="/pages/faculty/dashboard/account"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class="fas fa-user"></i>
            <span>My Account</span>
          </a>
          <a
            href="/pages/faculty/dashboard/searchBooks"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class="fas fa-book"></i>
            <span>Search Books</span>
          </a>
          <a
            href="/pages/faculty/dashboard/issuedBooks"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class="fas fa-book-reader"></i>
            <span>Issued Books</span>
          </a>
        </nav>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden w-full">
        <!-- Header -->
        <header class="bg-white shadow-sm">
          <div class="flex items-center justify-between p-4">
            <button
              id="sidebarToggle"
              class="md:hidden text-gray-600 hover:text-gray-900 p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
            >
              <i class="fas fa-bars text-xl"></i>
            </button>

            <!-- Right side header content -->
            <div class="w-full flex items-center justify-between gap-6">
              <div class="relative">
                <input
                  type="text"
                  id="searchBook"
                  placeholder="Search books..."
                  class="w-48 md:w-64 px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-purple-400 text-sm md:text-base"
                />
                <button
                  class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600"
                >
                  <i class="fas fa-search"></i>
                </button>
              </div>

              <div class="flex items-center gap-3 ml-auto">
                <img
                  id="userProfilePic"
                  src="https://ui-avatars.com/api/?name=Unknown"
                  alt="User"
                  class="w-8 h-8 rounded-full"
                />
                <span
                  id="userFullName"
                  class="text-gray-700 font-medium hidden md:inline"
                  >Unknown</span
                >
                <a
                  href="/api/logout"
                  class="text-red-600 hover:text-red-700 ml-4"
                  title="Logout"
                >
                  <i class="fas fa-sign-out-alt text-xl"></i>
                </a>
              </div>
            </div>
          </div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
          <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-800">Account Settings</h1>
            <p class="text-gray-600">
              Manage your profile and library preferences
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            <!-- Profile Card -->
            <div class="lg:col-span-1">
              <div
                class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden"
              >
                <div class="relative h-32">
                  <div
                    class="absolute inset-0 bg-gradient-to-r from-purple-500 to-indigo-500"
                  ></div>
                </div>
                <div class="relative px-6 pb-6">
                  <div class="text-center -mt-16">
                    <div class="relative inline-block">
                      <img
                        id="profilePic"
                        src="https://ui-avatars.com/api/?name=John+Doe"
                        alt="Profile Picture"
                        class="w-32 h-32 rounded-full border-4 border-white shadow-md"
                      />
                      <button
                        type="button"
                        class="absolute bottom-2 right-2 bg-purple-500 text-white rounded-full p-2 hover:bg-purple-600 transition-colors shadow-lg"
                      >
                        <i class="fas fa-camera"></i>
                      </button>
                    </div>
                    <h3
                      class="mt-4 text-xl font-semibold text-gray-900"
                      id="userName"
                    >
                      John Doe
                    </h3>
                    <p class="text-gray-500" id="userRole">Faculty Member</p>

                    <!-- Quick Stats -->
                    <div
                      class="grid grid-cols-2 gap-4 mt-6 border-t border-gray-100 pt-6"
                    >
                      <div class="text-center">
                        <p
                          class="text-3xl font-bold text-purple-600"
                          id="booksBorrowed"
                        >
                          0
                        </p>
                        <p class="text-sm text-gray-500">Books Borrowed</p>
                      </div>
                      <div class="text-center">
                        <p
                          class="text-3xl font-bold text-indigo-600"
                          id="booksDue"
                        >
                          0
                        </p>
                        <p class="text-sm text-gray-500">Due Soon</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Account Actions -->
              <div class="mt-6 space-y-4">
                <button
                  class="w-full py-3 px-4 flex items-center gap-3 text-gray-700 bg-white rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors"
                >
                  <i class="fas fa-history text-purple-500"></i>
                  <span>Borrowing History</span>
                </button>
                <button
                  class="w-full py-3 px-4 flex items-center gap-3 text-gray-700 bg-white rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors"
                >
                  <i class="fas fa-bell text-purple-500"></i>
                  <span>Notifications</span>
                </button>
              </div>
            </div>

            <!-- Profile Information -->
            <div class="lg:col-span-3 space-y-6">
              <!-- Personal Information -->
              <div class="bg-white rounded-xl shadow-sm border border-gray-100">
                <div class="p-6">
                  <h2
                    class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2"
                  >
                    <i class="fas fa-user-circle text-purple-500"></i>
                    Personal Information
                  </h2>
                  <form id="accountForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                      <div>
                        <label
                          class="block text-sm font-medium text-gray-700 mb-1"
                          >Name</label
                        >
                        <div class="relative">
                          <input
                            type="text"
                            id="name"
                            readonly
                            class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-200 focus:ring-2 focus:ring-purple-400 focus:border-transparent"
                          />
                          <i
                            class="fas fa-user absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"
                          ></i>
                        </div>
                      </div>
                      <div>
                        <label
                          class="block text-sm font-medium text-gray-700 mb-1"
                          >Username</label
                        >
                        <div class="relative">
                          <input
                            type="text"
                            id="facultyId"
                            readonly
                            class="w-full pl-10 pr-4 py-2 rounded-lg border border-purple-200 focus:ring-2 focus:ring-purple-400 focus:border-transparent"
                          />
                          <i
                            class="fas fa-user-circle absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"
                          ></i>
                        </div>
                      </div>
                      <div>
                        <label
                          class="block text-sm font-medium text-gray-700 mb-1"
                          >Email</label
                        >
                        <div class="relative">
                          <input
                            type="email"
                            id="email"
                            readonly
                            class="w-full pl-10 pr-4 py-2 rounded-lg border border-purple-200 focus:ring-2 focus:ring-purple-400 focus:border-transparent"
                          />
                          <i
                            class="fas fa-envelope absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"
                          ></i>
                        </div>
                      </div>
                      <div>
                        <label
                          class="block text-sm font-medium text-gray-700 mb-1"
                          >Faculty ID</label
                        >
                        <div class="relative">
                          <input
                            type="text"
                            id="department"
                            readonly
                            class="w-full pl-10 pr-4 py-2 rounded-lg border border-purple-200 focus:ring-2 focus:ring-purple-400 focus:border-transparent"
                          />
                          <i
                            class="fas fa-id-badge absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"
                          ></i>
                        </div>
                      </div>
                    </div>

                    <div class="flex gap-4 pt-4">
                      <button
                        type="button"
                        id="editProfileBtn"
                        class="flex-1 py-2.5 px-4 bg-gradient-to-r from-purple-500 to-indigo-500 text-white rounded-lg hover:from-purple-600 hover:to-indigo-600 transition duration-300 flex items-center justify-center gap-2"
                      >
                        <i class="fas fa-edit"></i>
                        <span>Edit Profile</span>
                      </button>
                      <button
                        type="button"
                        id="changePasswordBtn"
                        class="flex-1 py-2.5 px-4 bg-gradient-to-r from-gray-500 to-gray-600 text-white rounded-lg hover:from-gray-600 hover:to-gray-700 transition duration-300 flex items-center justify-center gap-2"
                      >
                        <i class="fas fa-key"></i>
                        <span>Change Password</span>
                      </button>
                    </div>
                  </form>
                </div>
              </div>

              <!-- Library Preferences -->
              <div class="bg-white rounded-xl shadow-sm border border-gray-100">
                <div class="p-6">
                  <h2
                    class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2"
                  >
                    <i class="fas fa-cog text-purple-500"></i>
                    Library Preferences
                  </h2>
                  <div class="space-y-4">
                    <div
                      class="flex items-center justify-between p-4 bg-gray-50 rounded-lg"
                    >
                      <div class="flex items-center gap-3">
                        <i class="fas fa-envelope text-purple-500"></i>
                        <div>
                          <p class="font-medium text-gray-700">
                            Email Notifications
                          </p>
                          <p class="text-sm text-gray-500">
                            Receive updates about due dates and new arrivals
                          </p>
                        </div>
                      </div>
                      <label
                        class="relative inline-flex items-center cursor-pointer"
                      >
                        <input type="checkbox" class="sr-only peer" checked />
                        <div
                          class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"
                        ></div>
                      </label>
                    </div>

                    <!-- Add more preference options -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Overlay and Scripts -->
    <div
      id="sidebarOverlay"
      class="fixed inset-0 bg-black/50 hidden z-30"
      aria-hidden="true"
    ></div>
    <script src="/js/faculty/account.js"></script>
    <script src="/js/faculty/secureDashboard.js"></script>
    <script src="/js/faculty/sidebarToggle.js"></script>
  </body>
</html>
