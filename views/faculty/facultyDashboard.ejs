<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard - SLIET Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <!-- Add overflow-x-hidden to prevent horizontal scroll on mobile -->
    <div class="flex h-screen overflow-x-hidden">
      <!-- Update sidebar to be fixed on mobile -->
      <aside
        class="fixed md:static top-0 left-0 h-full -translate-x-full md:translate-x-0 bg-gradient-to-b from-purple-900 to-indigo-900 w-64 flex-shrink-0 transition-transform duration-300 ease-in-out z-40"
        id="sidebar"
      >
        <div class="p-4 border-b border-white/10">
          <div class="flex items-center gap-3">
            <img
              src="/images/logo.png"
              alt="SLIET logo"
              class="w-10 h-10 rounded-full ring-2 ring-white/50"
            />
            <h1 class="text-white font-semibold">SLIET LIBRARY</h1>
          </div>
        </div>

        <nav class="p-4 space-y-2">
          <a
            href="/pages/faculty/dashboard"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg bg-white/10 hover:bg-white/20 transition-colors"
          >
            <i class="fas fa-home"></i>
            <span>Home</span>
          </a>
          <a
            href="/pages/faculty/dashboard/account"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class="fas fa-user"></i>
            <span>My Account</span>
          </a>
          <a
            href="/pages/faculty/dashboard/searchBooks"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class="fas fa-book"></i>
            <span>Search Books</span>
          </a>
          <a
            href="/pages/faculty/dashboard/issuedBooks"
            class="flex items-center gap-3 text-white/90 p-3 rounded-lg hover:bg-white/10 transition-colors"
          >
            <i class="fas fa-book-reader"></i>
            <span>Issued Books</span>
          </a>
        </nav>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden w-full">
        <!-- Updated Header with better mobile spacing -->
        <header class="bg-white shadow-sm">
          <div class="flex items-center justify-between p-4">
            <button
              id="sidebarToggle"
              class="md:hidden text-gray-600 hover:text-gray-900 p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
            >
              <i class="fas fa-bars text-xl"></i>
            </button>

            <!-- Right side header content -->
            <div class="w-full flex items-center justify-between gap-6">
              <div class="relative">
                <input
                  type="text"
                  id="searchBook"
                  placeholder="Search books, users..."
                  class="w-48 md:w-64 px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-purple-400 text-sm md:text-base"
                />
                <button
                  class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600"
                >
                  <i class="fas fa-search"></i>
                </button>
              </div>

              <div class="flex items-center gap-3 ml-auto mr-4">
                <img
                  id="userProfilePic"
                  src="https://ui-avatars.com/api/?name=Unknown"
                  alt="Admin"
                  class="w-8 h-8 rounded-full"
                />
                <span
                  id="userFullName"
                  class="text-gray-700 font-medium hidden md:flex"
                  >Unknown</span
                >
                <a
                  href="/api/logout"
                  class="text-red-600 hover:text-red-700 ml-4"
                  title="Logout"
                >
                  <i class="fas fa-sign-out-alt text-xl"></i>
                </a>
              </div>
            </div>
          </div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
          <!-- Welcome Section -->
          <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-800">
              Welcome back, <span id="wname"></span>!
            </h1>
            <p class="text-gray-600">
              Here's what's happening with your library account
            </p>
          </div>

          <!-- Stats Cards -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div
              class="bg-white rounded-xl shadow-sm p-6 border border-gray-100"
            >
              <div class="flex items-center gap-4">
                <div class="p-3 bg-purple-100 rounded-lg">
                  <i class="fas fa-book text-2xl text-purple-600"></i>
                </div>
                <div>
                  <h3 class="text-gray-500 text-sm">Books Borrowed</h3>
                  <p class="text-2xl font-semibold text-gray-900">3</p>
                </div>
              </div>
            </div>

            <div
              class="bg-white rounded-xl shadow-sm p-6 border border-gray-100"
            >
              <div class="flex items-center gap-4">
                <div class="p-3 bg-blue-100 rounded-lg">
                  <i class="fas fa-clock text-2xl text-blue-600"></i>
                </div>
                <div>
                  <h3 class="text-gray-500 text-sm">Due Soon</h3>
                  <p class="text-2xl font-semibold text-gray-900">1</p>
                </div>
              </div>
            </div>

            <div
              class="bg-white rounded-xl shadow-sm p-6 border border-gray-100"
            >
              <div class="flex items-center gap-4">
                <div class="p-3 bg-green-100 rounded-lg">
                  <i class="fas fa-bookmark text-2xl text-green-600"></i>
                </div>
                <div>
                  <h3 class="text-gray-500 text-sm">Reserved Books</h3>
                  <p class="text-2xl font-semibold text-gray-900">2</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Current Borrowings -->
          <div
            class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden mb-6"
          >
            <div class="p-6 border-b border-gray-100">
              <h2 class="text-lg font-semibold text-gray-900">
                Currently Borrowed Books
              </h2>
            </div>
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-50">
                  <tr>
                    <th
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                    >
                      Book Title
                    </th>
                    <th
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                    >
                      Due Date
                    </th>
                    <th
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                    >
                      Status
                    </th>
                    <th
                      class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"
                    >
                      Actions
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                  <!-- Sample Rows -->
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">The Great Gatsby</td>
                    <td class="px-6 py-4">Dec 20, 2025</td>
                    <td class="px-6 py-4">
                      <span
                        class="px-2 py-1 text-xs font-medium text-yellow-600 bg-yellow-100 rounded-full"
                        >Due Soon</span
                      >
                    </td>
                    <td class="px-6 py-4">
                      <button class="text-purple-600 hover:text-purple-800">
                        Renew
                      </button>
                    </td>
                  </tr>
                  <!-- Add more rows as needed -->
                </tbody>
              </table>
            </div>
          </div>

          <!-- Recommendations Section -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">
              Recommended for You
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              <!-- Book Cards -->
              <div
                class="bg-gray-50 rounded-lg p-4 hover:shadow-md transition-shadow"
              >
                <img
                  src="https://th.bing.com/th/id/OIP.0qxWWiv5uAS-T2OK11jpawHaLZ?rs=1&pid=ImgDetMain"
                  alt="Book Cover"
                  class="w-full h-48 object-cover rounded-md mb-4"
                />
                <h3 class="font-medium text-gray-800">1984</h3>
                <p class="text-sm text-gray-600">George Orwell</p>
                <button
                  class="mt-3 w-full bg-purple-600 text-white rounded-lg py-2 text-sm hover:bg-purple-700 transition-colors"
                >
                  Reserve
                </button>
              </div>
              <!-- Add more book cards as needed -->
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Add overlay for mobile sidebar -->
    <div
      id="sidebarOverlay"
      class="fixed inset-0 bg-black/50 hidden z-30"
      aria-hidden="true"
    ></div>

    <!-- Add Updated Script -->

    <script src="/js/faculty/secureDashboard.js"></script>
    <script src="/js/faculty/users.js"></script>

    <script>
      const sidebar = document.getElementById("sidebar");
      const sidebarToggle = document.getElementById("sidebarToggle");
      const overlay = document.getElementById("sidebarOverlay");

      // Toggle sidebar function
      function toggleSidebar() {
        const isOpen = !sidebar.classList.contains("-translate-x-full");

        if (isOpen) {
          // Close sidebar
          sidebar.classList.add("-translate-x-full");
          overlay.classList.add("hidden");
          document.body.classList.remove("overflow-hidden");
        } else {
          // Open sidebar
          sidebar.classList.remove("-translate-x-full");
          overlay.classList.remove("hidden");
          document.body.classList.add("overflow-hidden");
        }
      }

      // Event Listeners
      sidebarToggle.addEventListener("click", (e) => {
        e.stopPropagation();
        toggleSidebar();
      });

      overlay.addEventListener("click", toggleSidebar);

      // Close sidebar when clicking outside
      document.addEventListener("click", (e) => {
        const isOpen = !sidebar.classList.contains("-translate-x-full");
        const clickedInside =
          sidebar.contains(e.target) || sidebarToggle.contains(e.target);

        if (isOpen && !clickedInside) {
          toggleSidebar();
        }
      });

      // Handle screen resize
      window.addEventListener("resize", () => {
        if (window.innerWidth >= 768) {
          sidebar.classList.remove("-translate-x-full");
          overlay.classList.add("hidden");
          document.body.classList.remove("overflow-hidden");
        } else {
          sidebar.classList.add("-translate-x-full");
        }
      });

      // Prevent sidebar content clicks from closing
      sidebar.addEventListener("click", (e) => {
        e.stopPropagation();
      });

      // Add touch event handling
      let touchStartX = 0;
      let touchEndX = 0;

      document.addEventListener(
        "touchstart",
        (e) => {
          touchStartX = e.changedTouches[0].screenX;
        },
        { passive: true }
      );

      document.addEventListener(
        "touchend",
        (e) => {
          touchEndX = e.changedTouches[0].screenX;
          handleSwipe();
        },
        { passive: true }
      );

      function handleSwipe() {
        const SWIPE_THRESHOLD = 50;
        const isOpen = !sidebar.classList.contains("-translate-x-full");

        if (touchEndX - touchStartX > SWIPE_THRESHOLD && !isOpen) {
          // Swipe right, open sidebar
          toggleSidebar();
        } else if (touchStartX - touchEndX > SWIPE_THRESHOLD && isOpen) {
          // Swipe left, close sidebar
          toggleSidebar();
        }
      }
    </script>
  </body>
</html>
